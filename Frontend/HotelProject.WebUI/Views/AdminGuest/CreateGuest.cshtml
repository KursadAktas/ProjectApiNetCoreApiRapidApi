@model CreateGuestDto
@{
    ViewData["Title"] = "CreateGuest";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">

    <label>Müşteri Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />

    <label>Müşteri Soyadı</label>
    <input type="text" asp-for="Surname" class="form-control" />
    <span asp-validation-for="Surname" class="text-danger"></span>
    <br />

    <label>Müşteri Şehir</label>
    <input type="text" asp-for="City" class="form-control" />
    <span asp-validation-for="City" class="text-danger"></span>
    <br />

    <button type="submit" asp-controller="AdminGuest" asp-action="CreateGuest" class="btn btn-primary">Müşteri Ekle</button>


</form>

