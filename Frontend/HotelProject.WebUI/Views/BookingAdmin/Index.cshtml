@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 1;
}


       
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Misafir</th>
                            <th>Giriş Tarihi</th>
                            <th>Çıkış Tarihi</th>
                            <th>Durum</th>
                            <th>Onayla</th>
                            <th>İptal</th>
                            <th>Beklet</th>
                            <th>Güncelle</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                            <th>@count</th>
                            <td>@item.Name</td>
                            <td>@(((DateTime)item.CheckIn).ToString("dd-MM-yyyy"))</td>
                            <td>@(((DateTime)item.CheckOut).ToString("dd-MM-yyyy"))</td>
                            <td><span class="badge badge-primary px-2">@item.Status</span></td>
                    <td><a asp-controller="BookingAdmin" asp-action="ApprovedReservation" asp-route-id="@item.BookingID" class="btn btn-outline-primary">Onayla</a></td>
                            <td><a class="btn btn-outline-danger">İptal Et</a></td>
                            <td><a class="btn btn-outline-warning">Beklet </a></td>
                            <td><a class="btn btn-outline-info">Güncelle </a></td>
                            <td><a class="btn btn-outline-dark">Detaylar </a></td>
                         
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>


