@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Personel Adı</th>
        <th>Personel Ünvan</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
        <th>@item.StaffID</th>
        <td>@item.Name</td>
        <td>@item.Title</td>
            <td><a asp-controller="Staff" asp-action="DeleteStaff" asp-route-id="@item.StaffID" style="color:black" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a asp-controller="Staff" asp-action="UpdateStaff" asp-route-id="@item.StaffID" style="color:black" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
            <td><a style="color:black" class="btn mb-1 btn-rounded btn-outline-danger">Detaylar</a></td>
        </tr>
    }


</table>
<a asp-controller="Staff" asp-action="AddStaff" style="color:white" class="btn btn-success">Yeni Personel Girişi</a>

