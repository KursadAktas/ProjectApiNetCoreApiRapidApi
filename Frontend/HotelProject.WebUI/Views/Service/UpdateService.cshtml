@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden"  asp-for="ServiceID"/>
    <label>Hizmet İkonu</label>
    <input type="text" asp-for="ServiceIcon" class="form-control" />
    <span style="color:red" asp-validation-for="ServiceIcon"></span>
    <br />

    <label>Hizmet Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span style="color:red" asp-validation-for="Title"></span>
    <br />

    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <span style="color:red" asp-validation-for="Description"></span>
    <br />



    <button type="submit" asp-controller="Service" asp-action="UpdateService" class="btn btn-primary">Personel Güncelle</button>


</form>

