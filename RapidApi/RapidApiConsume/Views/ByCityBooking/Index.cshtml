
@{
    Layout = null;
    int count = 0;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

<div class="container">
    <br />
@using (Html.BeginForm("Index", "ByCityBooking", FormMethod.Post))
{
    <label>Şehir Id Giriniz</label>
    <input type="text" class="form-control" name="cityId" />
    <br />
    <button class="btn btn-primary">Şehir Otelleri Listele</button>
}


    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Otel Adı</th>
            <th>Otel Puanı</th>
            <th>Açıklaması</th>


        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.name</td>
                <td>@item.reviewScore</td>
                <td><a class="btn btn-outline-dark">Detaylar</a></td>


            </tr>
        }

    </table>
</div>
