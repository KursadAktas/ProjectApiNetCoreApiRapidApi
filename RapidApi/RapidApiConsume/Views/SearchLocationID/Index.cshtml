@model List<BookingApiLocationSearchViewModel>
@{
    Layout = null;
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">


<div class="container">
    <br />
    @using (Html.BeginForm("Index", "SearchLocationID", FormMethod.Post))
    {
        <label>Şehir Adını Giriniz</label>
        <input type="text" class="form-control" name="cityName" />
        <br />
        <button class="btn btn-primary">Şehir ID Bul</button>
    }
    <table class="table table-bordered">
        <tr>
           
            <th>Lokasyon</th>
          


        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.dest_id</td>
              
               

            </tr>
        }

    </table>
    <br />

    <a href="/ByCityBooking/Index/" class="btn btn-dark">Yeni Otel Rezervasyon Bilgisi</a>
</div>